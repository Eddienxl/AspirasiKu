<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FAFF"
    android:padding="54dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tempatkan semua elemen kamu di sini -->
        <TextView
            android:id="@+id/txtChangePasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Kata Sandi"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Label Old Password -->
        <TextView
            android:id="@+id/labelOldPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kata Sandi Lama"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="32dp" />

        <!-- Input Old Password -->
        <EditText
            android:id="@+id/inputOldPassword"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:hint="Masukkan sandi lama..."
            android:padding="12dp"
            android:textSize="14sp"

            android:inputType="textPassword"
            android:background="@drawable/edit_text_background" />

        <!-- Label New Password -->
        <TextView
            android:id="@+id/labelNewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kata Sandi Baru"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />

        <!-- Input New Password -->
        <EditText
            android:id="@+id/inputNewPassword"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:hint="Masukkan sandi baru..."
            android:padding="12dp"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_background" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#1E66F0"
            android:layout_marginTop="32dp"
            app:cornerRadius="9dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
