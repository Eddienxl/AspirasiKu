<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:id="@+id/txtJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Postingan" android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/txtWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 jam lalu"
                android:textSize="12sp"
                android:textColor="#777777"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/txtKategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori: Umum"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtKonten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ini adalah isi postingan yang bisa sangat panjang dan berisi teks lengkap."
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/imgPost"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:contentDescription="Gambar Postingan" />

    </LinearLayout>

</androidx.cardview.widget.CardView>