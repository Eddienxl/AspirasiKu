<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Judul Postingan -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Judul Postingan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Konten Postingan -->
    <TextView
        android:id="@+id/txtContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Konten postingan di sini..."
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="16dp" />

    <!-- Section Komentar -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerComments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        app:layout_constraintTop_toBottomOf="@id/txtContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Section Voting -->
    <LinearLayout
        android:id="@+id/voteSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerComments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnUpvote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upvote"
            android:backgroundTint="@color/teal_200"
            android:layout_weight="1"
            android:padding="8dp" />

        <TextView
            android:id="@+id/txtUpvotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnDownvote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Downvote"
            android:backgroundTint="@color/teal_700"
            android:layout_weight="1"
            android:padding="8dp" />

        <TextView
            android:id="@+id/txtDownvotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Input Komentar -->
    <EditText
        android:id="@+id/inputComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tambah komentar..."
        android:inputType="textMultiLine"
        android:minLines="2"
        android:padding="8dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintTop_toBottomOf="@id/voteSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Tombol Kirim -->
    <Button
        android:id="@+id/btnSubmitComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/inputComment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>